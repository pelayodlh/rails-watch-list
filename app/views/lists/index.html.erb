
<div class="mx-3 my-3">
  <div class="banner my-5">
    <h1 class="text-center">This are all the lists</h1>
  </div>
  <div class="container">
    <div class="row">

      <% @lists.each do |list| %>
        <div class="col-6">
           <div class= "card my-2">
             <h3><div class="text-center my-2"><%= link_to  list.name, list_path(list.id) %> </div></h3>
             <div class="text-center my-2"><%= cl_image_tag list.photo.key, height: 220, width: 200, :effect=>"shadow", :x=>5, :y=>8, crop: :fill  unless list.photo.key.nil? %></div>
            </div>
        </div>

      <% end %>

    </div>
    <%= link_to '<button class="btn btn-primary my-3">Want to add a new one?</button>'.html_safe, new_list_path %>
  </div>
</div>
