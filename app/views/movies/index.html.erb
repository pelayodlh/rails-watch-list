
<h1 class="mx-3 my-3 text-center">These are the movies!</h1>

<div class="container">

<% @movies.each do |movie| %>
<div class="card my-3">
<h3 class="px-2 py-2"><%= link_to movie.title, movie_path(movie.id) %> </h3> 
<p class="px-2 py-2"><em><strong>Description</strong></em></p>
<p class="px-2 py-2"><%= movie.overview %></p>
<p class="px-2 py-2">  <%= movie.rating %><i class="fa-solid fa-star mx-1" style="color: #FFD43B;"></i></p>
</div>
<% end %>
</div>
</div>
